<% if @whatson_categories.any? %>
  <h2><%= t('.title') %></h2>
  <ul id='categories'>
    <% @whatson_categories.each do |category| %>
      <li<%= " class='selected'" if @category.present? and @category.id == category.id %>>
        <%= link_to "#{category.title} (#{category.post_count})", whatson_category_url(category) %>
      </li>
    <% end %>
  </ul>
<% end %>